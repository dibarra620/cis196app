	<h2 onclick="this.style.backgroundColor='lightblue';this.style.color='white'"><%= @user.name %></h2>
	<p><%= @user.email %></p>
	<p><%= @user.password %></p>
	<h3>Tasks</h3>
	<% Tasklist.all.sort_by_title.each do |task_list| %>
		<%if (task_list.user).name == @user.name%>
			<p onMouseOver="this.style.backgroundColor='lightblue';this.style.color='white' " onMouseOut="this.style.backgroundColor='white';this.style.color = 'black'"> <%= task_list.title %></p>
		<%end%>
	<%end%>
	<%= link_to "new task", new_tasklist_path%>