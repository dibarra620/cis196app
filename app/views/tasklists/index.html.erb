<h1 id="title" onclick="this.style.backgroundColor='lightblue';this.style.color='white'">Lists</h1>

<table>
	<tr>
		<td>title</td>
		<td>user</td>
	</tr>

<% @task_lists.each do |task_list| %>
	<tr>
		<td onMouseOver="this.style.backgroundColor='lightblue';this.style.color='white' " onMouseOut="this.style.backgroundColor='white';this.style.color = 'black'"><%= task_list.title %></td>
		<td><%= (task_list.user).name %></td>
		<td><%= link_to "show tasklist", tasklist_path(task_list.id) %></td>
		<td><%= link_to "edit tasklist", edit_tasklist_path(task_list.id) %></td>
		<td><%= button_to "destroy tasklist", tasklist_path(task_list), confirm: "are you sure you want to delete?", method: :delete%></td>
	</tr>
<%end%>
</table>
